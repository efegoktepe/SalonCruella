@model IEnumerable<SalonCruella.Models.Calisan>

<h1>Çalışan Listesi</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Uzmanlık Alanı</th>
            <th>Uygunluk Saatleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Adi</td>
                <td>@calisan.UzmanlikAlani</td>
                <td>@calisan.BaslangicSaati.ToString(@"hh\:mm") - @calisan.BitisSaati.ToString(@"hh\:mm")</td>
            </tr>
        }
    </tbody>
</table>
