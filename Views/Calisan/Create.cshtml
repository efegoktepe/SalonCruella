@model SalonCruella.Models.Calisan

<div class="container mt-4">
    <h1 class="mb-4">Yeni Çalışan Ekle</h1>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Çalışan Adı -->
        <div class="mb-3">
            <label asp-for="Adi" class="form-label">Adı</label>
            <input asp-for="Adi" class="form-control" />
            <span asp-validation-for="Adi" class="text-danger"></span>
        </div>

        <!-- Uzmanlık Alanı -->
        <div class="mb-3">
            <label asp-for="UzmanlikAlani" class="form-label">Uzmanlık Alanı</label>
            <input asp-for="UzmanlikAlani" class="form-control" />
            <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
        </div>

        <!-- Başlangıç Saati -->
        <div class="mb-3">
            <label asp-for="BaslangicSaati" class="form-label">Başlangıç Saati</label>
            <input asp-for="BaslangicSaati" class="form-control time-picker" placeholder="09:00" />
            <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
        </div>

        <!-- Bitiş Saati -->
        <div class="mb-3">
            <label asp-for="BitisSaati" class="form-label">Bitiş Saati</label>
            <input asp-for="BitisSaati" class="form-control time-picker" placeholder="18:00" />
            <span asp-validation-for="BitisSaati" class="text-danger"></span>
        </div>

        <!-- Salon Seçimi -->
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr(".time-picker", {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true // 24 saat formatını etkinleştirir
            });
        });
    </script>
}
<div asp-validation-summary="All" class="text-danger"></div>
